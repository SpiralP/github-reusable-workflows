{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinAllExceptPeerDependencies",
    ":semanticCommits",
    ":rebaseStalePrs"
  ],
  "automergeStrategy": "squash",
  "cargo": {
    "enabled": true,
    "groupName": "cargo dependencies",
    "patch": {
      "automerge": true
    },
    "separateMinorPatch": true
  },
  "github-actions": {
    "enabled": true,
    "packageRules": [
      {
        "matchDepNames": ["SpiralP/github-reusable-workflows"],
        "automerge": true
      }
    ]
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "groupName": "lock file maintenance"
  },
  "major": {
    "enabled": true,
    "minimumReleaseAge": "7 days"
  },
  "minor": {
    "enabled": true,
    "minimumReleaseAge": "7 days"
  },
  "patch": {
    "enabled": true,
    "minimumReleaseAge": "7 days"
  },
  "nix": {
    "enabled": true,
    "groupName": "nix dependencies",
    "minimumReleaseAgeBehaviour": "timestamp-optional"
  },
  "npm": {
    "enabled": true,
    "groupName": "npm dependencies",
    "packageRules": [
      {
        "matchPackageNames": ["@types/**"],
        "automerge": true
      }
    ],
    "patch": {
      "automerge": true
    },
    "separateMinorPatch": true
  },
  "packageRules": [
    {
      "matchJsonata": ["isBreaking = true"],
      "groupName": "{{manager}} dependencies (breaking)",
      "groupSlug": "{{manager}}-dependencies-breaking"
    }
  ],
  "recreateWhen": "always",
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "osvVulnerabilityAlerts": true
}
