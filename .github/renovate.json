{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:best-practices",
    ":pinAllExceptPeerDependencies",
    ":pinDevDependencies"
  ],
  "lockFileMaintenance": {
    "enabled": true
  },
  "nix": {
    "enabled": true
  },
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major",
        "minor"
      ],
      "minimumReleaseAge": "7 days"
    },
    {
      "matchManagers": [
        "github-actions"
      ],
      "matchDepNames": [
        "SpiralP/github-reusable-workflows"
      ],
      "automerge": true,
      "automergeStrategy": "squash"
    },
    {
      "matchManagers": [
        "nix"
      ],
      "groupName": "nix dependencies"
    },
    {
      "matchManagers": [
        "cargo"
      ],
      "groupName": "cargo dependencies"
    },
    {
      "matchManagers": [
        "npm"
      ],
      "groupName": "npm dependencies"
    },
    {
      "matchManagers": [
        "cargo"
      ],
      "matchJsonata": [
        "isBreaking = true"
      ],
      "groupName": "cargo dependencies (breaking)",
      "groupSlug": "cargo-dependencies-breaking"
    },
    {
      "matchManagers": [
        "npm"
      ],
      "matchJsonata": [
        "isBreaking = true"
      ],
      "groupName": "npm dependencies (breaking)",
      "groupSlug": "npm-dependencies-breaking"
    },
    {
      "matchUpdateTypes": [
        "lockFileMaintenance"
      ],
      "groupName": "lock file maintenance"
    }
  ]
}
