{
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits"
      }
    ],
    [
      "@semantic-release/github",
      {
        "failComment": false,
        "failCommentCondition": false,
        "failTitle": false,
        "releaseNameTemplate": "${nextRelease.name}${env.VERSION_METADATA ? ' (' + env.VERSION_METADATA + ')' : ''}",
        "successComment": false,
        "successCommentCondition": false
      }
    ],
    [
      "@semantic-release/exec",
      {
        "successCmd": "nix run --print-build-logs github:SpiralP/github-reusable-workflows/$${WORKFLOW_SHA:-main}#release-success -- ${nextRelease.version} ${nextRelease.gitTag}"
      }
    ]
  ]
}
